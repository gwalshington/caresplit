<div class="mobile hidden">
  <div class="welcomeImageMobile">
  </div>
  <div style="margin: auto; text-align: center;">
    <%= link_to image_tag('logo.png', style:"height: 50px;"), dashboard_path, class:"topNavHeader" %>
    <%= render partial: 'devise/sessions/new' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
    <h3>Need an account? <div class="btnSignUp"><%= link_to "Sign up", new_registration_path(resource_name) %></div>
</div>
</div>
</div>

<div class="desktop">
  <div class="welcomeImageDesktop">
    <div style="margin: auto; text-align: center;">
      <%= link_to image_tag('logo.png', style:"height: 50px;"), dashboard_path, class:"topNavHeader" %>
      <%= render partial: 'devise/sessions/new' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <h3>Need an account? <%= link_to "Sign up", new_registration_path(resource_name) %></h3>
    </div>
  </div>
</div>

<script>
$(window).on("load resize", function() {
      if ($(window).width() > 600) {
        $(".mobile").addClass('hidden');
        $(".desktop").removeClass('hidden');
      } else {
        $(".desktop").addClass('hidden');
        $(".mobile").removeClass('hidden');
      }
});

</script>
