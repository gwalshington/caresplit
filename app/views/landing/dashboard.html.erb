<div class="splitNav">
    <h3 class="splitNavItem selectedSplitNavItem" id="availableNav">Available</h3>
    <h3 class="splitNavItem" id="bookedNav">Booked</h3>
    <h3 class="splitNavItem" id="hostNav">Hosting</h3>
</div>
<div class="availabilityContainer">
  <div class="availableSplitContainer">
    <% @availabilities.each.with_index do |a, index| %>
      <% if(index === 0 || a.start_time.strftime('%^a, %^b %-d') != @availabilities[index-1].start_time.strftime('%^a, %^b %-d'))  %>
        <h1 class="listItemDate"><%= a.start_date.strftime('%^a - %^b %-d') %></h1>
      <% end %>
      <%= render partial: 'availabilities/availability_item', :locals => {availability: a} %>
    <% end %>
  </div>

  <div class="bookedSplitContainer" style="display: none;">
    <% @bookedSplits.each.with_index do |a, index| %>
      <% if(index === 0 || (a.availability.start_time.strftime('%^a, %^b %-d') != @bookedSplits[index-1].availability.start_time.strftime('%^a, %^b %-d')))  %>
        <h1 class="listItemDate"><%= a.availability.start_time.strftime('%^a - %^b %-d') %></h1>
      <% end %>
      <%= render partial: 'availabilities/split_item', :locals => {split: a} %>
    <% end %>
  </div>

  <div class="hostSplitContainer" style="display: none;">
    <% @hostingSplits.each.with_index do |a, index| %>
      <% if(index === 0 || a.availability.start_time.strftime('%^a, %^b %-d') != @hostingSplits[index-1].availability.start_time.strftime('%^a, %^b %-d'))  %>
        <h1 class="listItemDate"><%= a.availability.start_time.strftime('%^a - %^b %-d') %></h1>
      <% end %>
      <%= render partial: 'availabilities/split_item', :locals => {split: a} %>
    <% end %>
  </div>
  <div style="text-align: center; height: 50px; padding-top: 50px;">
    <%= link_to '+ Add Availability', new_availability_path, class: 'bannerBtn' %>
  </div>
</div>
