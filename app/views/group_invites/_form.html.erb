<div class="pageContainer">
  <h2 class="signUpHeader">Invite another Parent</h2>
    <div class="formStandard">

    <%= form_for(group_invite) do |f| %>
      <% if group_invite.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(group_invite.errors.count, "error") %> prohibited this group_invite from being saved:</h2>

          <ul>
          <% group_invite.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>



      <div class="field">
        <%= f.label 'FIRST NAME', class: "labelStandard" %>
        <%= f.text_field :first_name, class: "inputStandard" %>
      </div>

      <div class="field">
        <%= f.label 'PHONE', class: "labelStandard" %>
        <%= f.text_field :phone, class: "inputStandard", id: 'phoneNumber' %>
      </div>
      <%= f.label 'OR', class: "labelStandard" %>
      <div class="field">
        <%= f.label 'EMAIL', class: "labelStandard" %>
        <%= f.text_field :email, class: "inputStandard" %>
      </div>

      <div class="field">
        <%= f.label 'NOTES', class: "labelStandard" %>
        <%= f.text_field :notes, class: "inputStandard" %>
      </div>

      <div class="actions">
        <%= f.submit 'Invite', class: "btnPrimary btnPrimaryLarge" %>
      </div>
    <% end %>
  </div>
</div>
