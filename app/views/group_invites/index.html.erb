<h1>Group Invites</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>First name</th>
      <th>Email</th>
      <th>Last emailed</th>
      <th>User</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_invites.each do |group_invite| %>
      <tr>
        <td><%= group_invite.group %></td>
        <td><%= group_invite.first_name %></td>
        <td><%= group_invite.email %></td>
        <td><%= group_invite.last_emailed %></td>
        <td><%= group_invite.user %></td>
        <td><%= group_invite.notes %></td>
        <td><%= link_to 'Show', group_invite %></td>
        <td><%= link_to 'Edit', edit_group_invite_path(group_invite) %></td>
        <td><%= link_to 'Destroy', group_invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

