<div class="pageContainer">
  <h2 class="formHeader">Add Child</h2>

  <%= form_for(child) do |f| %>
    <% if child.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(child.errors.count, "error") %> prohibited this child from being saved:</h2>

        <ul>
        <% child.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :first_name, class: "labelStandard" %>
      <%= f.text_field :first_name, class: "inputStandard" %>
    </div>

    <div class="field">
      <%= f.label :birthday, class: "labelStandard" %>
      <div><%= f.date_select :birthday, start_year: Date.today.year-19, end_year: Date.today.year %></div>
    </div>

    <div class="field">
      <%= f.label :gender, class: "labelStandard" %>
      <%= f.collection_select :gender_id, Gender.all, :id, :name %>
    </div>

    <div class="field">
      <%= f.label :notes, class: "labelStandard" %>
      <%= f.text_area :notes, class: "inputStandard" %>
    </div>

    <div class="field">
      <%= f.hidden_field :user_id, value: current_user.id %>
    </div>

    <div class="actions">
      <%= f.submit '+ Add Child', class: "btnPrimary btnPrimaryLarge" %>
    </div>
  <% end %>
</div>
