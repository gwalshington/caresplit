

<h1>Splits</h1>

<table>
  <thead>
    <tr>
      <th>Availability</th>
      <th>User</th>
      <th>Approved</th>
      <th>Cancelled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @splits.each do |split| %>
      <tr>
        <td><%= split.availability %></td>
        <td><%= split.user %></td>
        <td><%= split.approved %></td>
        <td><%= split.cancelled %></td>
        <td><%= link_to 'Show', split %></td>
        <td><%= link_to 'Edit', edit_split_path(split) %></td>
        <td><%= link_to 'Destroy', split, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Split', new_split_path %>
