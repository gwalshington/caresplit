<div class="formStandard">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :email, class: "labelStandard" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "inputStandard" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "labelStandard" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "inputStandard" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btnPrimary btnPrimaryLarge" %>
  </div>
<% end %>
</div>
