<% @email = request.query_parameters[:email] ? request.query_parameters[:email] : '' %>

<div class="pageContainer">
  <div class="signUpHeading">Welcome! You're one step closer to getting an hour to do what you need. <br></br>Now let's create your account.</div>
  <div class="formStandard">
    <div class="signUpProgress">
      <%= image_tag('line.svg', style: "z-index: 100;") %>
      <div class="dotContainer">
        <div class="dot purpleDot"></div>
        <div class="dot greyDot"></div>
        <div class="dot greyDot"></div>
        <div class="dot greyDot"></div>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>


    <div class="field">
      <%= f.label 'FIRST NAME', class: "labelStandard" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "inputStandard" %>
    </div>

    <div class="field">
      <%= f.label 'LAST NAME', class: "labelStandard" %>
      <%= f.text_field :last_name, autocomplete: "last_name", class: "inputStandard" %>
    </div>

    <div class="field">
      <%= f.label 'EMAIL', class: "labelStandard" %>
      <%= f.email_field :email, autocomplete: "email", class: "inputStandard", value: @email %>
    </div>

    <div class="field">
      <%= f.label 'PASSWORD', class: "labelStandard" %>
      <% if @minimum_password_length %>
      <em class="labelStandard">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "inputStandard" %>
    </div>

    <div class="field">
      <%= f.label 'CONFIRM PASSWORD', class: "labelStandard" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "inputStandard" %>
    </div>

    <h3 class="labelStandard">By clicking “continue”, I agree to the <a href="http://www.caresplit.com/terms-and-conditions">terms</a> and <a href="http://www.caresplit.com/privacy-policy">privacy policy.'</a></h3>

    <div class="actions">
      <%= f.submit "Continue", class: "btnPrimary btnPrimaryLarge" %>
    </div>
    <% end %>
  </div>
</div>
